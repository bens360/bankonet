package app;

import java.util.Arrays;
import java.util.List;

import command.ExitCommand;
import command.IhmCommand;
import command.ListerTousClientsCommand;
import command.OuvrirCompteCourant;

public class ConsoleApp {

	private List<IhmCommand> commands = Arrays.asList(new ExitCommand(), new ListerTousClientsCommand(),
			new OuvrirCompteCourant());

	public static void main(String[] args) {
		ConsoleApp app = new ConsoleApp();
		app.afficherMenu();
	}

	public void afficherMenu() {
		System.out.println("****APPLICATION CLIENT***");
		for (IhmCommand command : commands) {
			System.out.println(command.getId() + " . " + command.getLibelleMenu());
		}

	}

}
