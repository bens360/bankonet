package DAO;

import java.sql.ResultSet;
import java.sql.SQLException;

import com.bankonet.Civilite;
import com.bankonet.Client;
import com.bankonet.Compte;

public class ClientDao {

	public static Client recupereClient(String loginClient ,String mdpClient ) {
		ResultSet rSclient = ConnexionBDD.BDDRequest("SELECT* FROM client WHERE login= '"+ loginClient+"' AND mot_de_passe='"+ mdpClient);
		Civilite civilite = null;
		Client client = null;
		try {
			civilite = (Civilite) rSclient.getObject("civilite");
			Client client = new Client(civilite, rSclient.getString("nom"), rSclient.getString("prenom"), mdpClient, loginClient);
		} catch (SQLException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		return client;
	}

