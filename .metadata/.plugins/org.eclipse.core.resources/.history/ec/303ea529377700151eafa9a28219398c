	public static void SoldeDesComptes(Client client) {
		try {
			//List<Compte> comptesList = null;
			String request = "SELECT * FROM compte_courant WHERE id_client =" + client.getIdentifiant();
			ResultSet rScomptesList = JDBCConnexionBDD.jDBCRequestBDD(request);
			try {
				while (rScomptesList.next()) {
					CompteCourant compteCourant = new CompteCourant(rScomptesList.getString("id_compte_courant"), rScomptesList.getString("intitule"), rScomptesList.getDouble("solde"), rScomptesList.getDouble("montant_decouvert_autorise"));
					//comptesList.add(compteCourant);
					System.out.println("Le solde du compte: " + compteCourant.getIntitule() + " est de : "+ compteCourant.getSolde());
				}
			} catch (SQLException e) {
				System.out.println("Problème à la récupération des comptes");
				e.printStackTrace();
			}
		
			//for (Compte compte2 : comptesList) {
				//System.out.println("Le solde du compte: " + compte2.getIntitule() + " est de : "+ compte2.getSolde());
			//}
		} catch (Exception e) {
			System.out.println("Erreur dans Soldes des comptes");
		}
	}

