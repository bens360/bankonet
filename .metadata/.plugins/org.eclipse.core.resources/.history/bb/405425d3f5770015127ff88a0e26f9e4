package ihm.command;

import java.util.Scanner;
import com.bankonet.Client;

import client.ClientDaoJpa;

public class RechercheClientPrenom implements IhmCommand{

	@Override
	public Integer getId() {
		return 4;
	}

	@Override
	public String getLibelleMenu() {
		return "Rechercher un client par son prénom";
	}

	@Override
	public void execute (Client client) {
		Scanner sc = new Scanner(System.in);
		System.out.println("Indiquer le prénom recherché");
		String prenom = sc.nextLine();
		System.out.println("Prénom recherché: " + prenom);
		Client clientPrenom = ClientDaoJpa.recherchePrenom(prenom);
		System.out.println("Client trouvé: " + clientPrenom);
	}
}
