package client;

import javax.persistence.Persistence;

import com.bankonet.Civilite;
import com.bankonet.Client;

public class InitService {
	
	private static ClientDaoJpa clientDao = new ClientDaoJpa(Persistence.createEntityManagerFactory("bankonet-lib"));
	
	public static void init() {
		//insertion de 5 client dans la BDD
		
		
		
		Client client2 = new Client("58998", Civilite.MADAME, "Paul", "Personne", "secret", "pp");
		clientDao.save(client2);
		Client client3 = new Client("58997", Civilite.MADEMOISELLE, "Jane", "Doe", "secret", "jd");
		clientDao.save(client3);
		Client client4 = new Client("58996", Civilite.MONSIEUR, "Paul", "Hugues", "secret", "ph");
		clientDao.save(client4);
		Client client5 = new Client("58995", Civilite.MONSIEUR, "Raoul", "Jacques", "secret", "rj");
		clientDao.save(client5);
		
		
		
	}

}
